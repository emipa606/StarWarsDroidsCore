<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ResourceBase" Name="DroidBatteryBase">
    <defName>AstromechBattery</defName>
    <label>droid battery</label>
    <description>Consumable cells of energy used by droids to recharge.</description>
    <graphicData>
      <texPath>Things/Items/BatteryDroid</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MarketValue>10</MarketValue>
      <Mass>0.025</Mass>
      <MaxHitPoints>50</MaxHitPoints>
      <Flammability>0.3</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <workAmount>800</workAmount>
      <targetCountAdjustment>5</targetCountAdjustment>
      <productCount>5</productCount>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Steel>40</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="O21Toolbox.Needs.CompProperties_EnergySource">
        <isConsumable>true</isConsumable>
        <energyWhenConsumed>0.80</energyWhenConsumed>
      </li>
    </comps>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>
  <ThingDef ParentName="ResourceBase" Name="DroidPartsBase">
    <defName>AstromechParts</defName>
    <label>droid repair parts</label>
    <description>Miscellanous droid parts, adhesives, solder, welding resources &amp; metal plates for repairing droids.</description>
    <graphicData>
      <texPath>Things/Items/RepairPartsDroid</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MarketValue>17</MarketValue>
      <Mass>0.5</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <workAmount>300</workAmount>
      <productCount>3</productCount>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Steel>6</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <modExtensions>
      <li Class="O21Toolbox.ArtificialPawn.DefModExtension_RepairPartsProps" />
    </modExtensions>
  </ThingDef>
  <ThingDef ParentName="ResourceBase" Name="DroidRepairKitBase">
    <defName>AstromechRepairKit</defName>
    <label>droid repair kit</label>
    <description>A repair kit containing the tools and materials, to fully restore a Droid to mint condition, from wear and tear to missing parts. Also refills coolant on Droids.\n\nUsed as a operation.</description>
    <graphicData>
      <texPath>Things/Items/RepairKitDroid</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MarketValue>222</MarketValue>
      <Mass>0.5</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <workAmount>1200</workAmount>
      <productCount>1</productCount>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Steel>40</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>
</Defs>